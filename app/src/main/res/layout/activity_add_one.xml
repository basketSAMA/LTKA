                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_subt"
                    android:text="-"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
        </LinearLayout>

