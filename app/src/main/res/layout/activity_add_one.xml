<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/add_one_background"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="￥"
            android:textSize="50sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/add_one_hs"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/display_sum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="0.00"
            android:text=""
            android:textSize="50sp"
            android:textStyle="bold"

            android:layout_gravity="right"
            android:gravity="right"/>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/add_one_color"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:background="@color/colorDiet">
            <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/add_one_bmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:bmb_buttonEnum="textInsideCircle"
                app:bmb_piecePlaceEnum="piecePlace_dot_8_1"
                app:bmb_buttonPlaceEnum="buttonPlace_sc_8_1"
                app:bmb_normalColor="@color/colorWhite"
                />
            <TextView
                android:id="@+id/add_one_classification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/classification_diet"
                android:textColor="@color/colorWhite"
                android:textSize="40dp"
                android:layout_gravity="center_horizontal|center_vertical"/>
        </android.support.design.widget.CoordinatorLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="&#9733;"
                android:textColor="#336600"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/add_one_remarks"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="写点备注..."
                android:inputType="text"
                android:maxLines="1"/>
        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:textColor="@color/colorBlack"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_7"
                    android:text="7"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:textColor="@color/colorBlack"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_8"
                    android:text="8"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:textColor="@color/colorBlack"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_9"
                    android:text="9"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_delete"
                    android:text="删除"
                    android:textStyle="bold"
                    android:textColor="#ff0000"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_save"
                    android:text="保存"
                    android:textStyle="bold"
                    android:textColor="#336600"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:textColor="@color/colorBlack"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_4"
                    android:text="4"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:textColor="@color/colorBlack"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_5"
                    android:text="5"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:textColor="@color/colorBlack"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_6"
                    android:text="6"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:textColor="@color/colorBlack"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_0"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:textColor="@color/colorPrimary"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_add"
                    android:text="+"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:textColor="@color/colorBlack"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_1"
                    android:text="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:textColor="@color/colorBlack"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_2"
                    android:text="2"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:textColor="@color/colorBlack"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_3"
                    android:text="3"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:textColor="@color/colorPrimary"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_dot"
                    android:text="."
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:textColor="@color/colorPrimary"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_subt"
                    android:text="-"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
        </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
