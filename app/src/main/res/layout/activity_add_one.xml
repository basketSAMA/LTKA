    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="&#9733;"
                android:textColor="#336600"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/add_one_remarks"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="写点备注..."
                android:inputType="text"
                android:maxLines="1"/>
        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:textColor="@color/colorBlack"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_7"
                    android:text="7"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:textColor="@color/colorBlack"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_8"
                    android:text="8"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:textColor="@color/colorBlack"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_9"
                    android:text="9"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_delete"
                    android:text="删除"
                    android:textStyle="bold"
                    android:textColor="#ff0000"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_save"
                    android:text="保存"
                    android:textStyle="bold"
                    android:textColor="#336600"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:textColor="@color/colorBlack"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_4"
                    android:text="4"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:textColor="@color/colorBlack"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_5"
                    android:text="5"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:textColor="@color/colorBlack"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_6"
                    android:text="6"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:textColor="@color/colorBlack"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_0"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:textColor="@color/colorPrimary"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/add_one_add"
                    android:text="+"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

